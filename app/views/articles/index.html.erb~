		<tr>
			<td><%= article.title %></td>
			<td><%= article.text %></td>
			<td><%= link_to 'Xem bài viết', article_path(article) %></td>
			<td><%= link_to 'Chỉnh sửa', edit_article_path(article) %></td>
			<td><%= link_to 'Xóa bài viết', article_path(article),
