<article>
			<header>
				<h1>
					<a href="<%= article_path(@article) %>" rel="bookmark" title="Permalink to <%= @article.title %>"><%= @article.title %></a>
				</h1>
			</header>
			
			<footer>
				<p class="post-info">Được viết bởi <span>Tường Trọng Nguyễn</span> | <%= @article.created_at.to_s(:long) %> | <span><%= link_to " #{@article.comments.count} bình luận »", :anchor => "comments_content" %></span>
				</p>
			</footer>
			
			<div class="detailContent">
				<p><%= simple_format(@article.text) %></p>
			</div>
</article>
