<%= form_for @article do |f| %>
	<% if @article.errors.any? %>
	<div id="error_explanation">
		<h2><%= pluralize(@article.errors.count, "error") %>: Tiêu đề bài viết quá ngắn!</h2>
		<ul>
		<% @article.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
		</ul>
	</div>
	<% end %>
	
	<p>
		<%= f.label :title, "Tiêu đề" %><br>
		<%= f.text_field :title, :class => 'form-control', :placeholder => "Tiêu đề bài viết" %>
	</p>
	
	<p>
		<%= f.label :text, "Nội dung" %><br>
		<%= f.text_area :text, :class => 'form-control', :placeholder => "Nội dung bài viết" %>
	</p>
	
	<p>
		<%= f.submit "Đăng bài viết", :class => "btn btn-primary" %>
	</p>
<% end %>
